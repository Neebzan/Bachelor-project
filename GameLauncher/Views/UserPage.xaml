<local:BasePage x:Class="GameLauncher.Views.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameLauncher" xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <Grid HorizontalAlignment="Left" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0">
            <Label Content="Welcome!" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30"/>
            <Label x:Name="username_label" Content="username" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20"/>
        </StackPanel>
        <Button Name="Logout_button" Content="Logout" Grid.Row="1" Width="131" Height="30" FontWeight="Medium" HorizontalAlignment="Left" Margin="0, 30, 0, 0"  VerticalAlignment="Bottom" Click="Logout_Click"/>
    </Grid>


</local:BasePage>
